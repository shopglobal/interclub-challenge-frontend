{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "React": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": [
      1
    ],
    "react/react-in-jsx-scope": 2,
    "arrow-body-style": [
      0,
      "always"
    ],
    "object-curly-newline": [
      0
    ],
    "no-confusing-arrow": [
      0
    ],
    "class-methods-use-this": [
      0
    ],
    "arrow-parens": [
      0
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/no-extraneous-dependencies": 0,
    "meteor/no-session": [
      0
    ],
    "import/prefer-default-export": [
      0
    ],
    "import/first": [
      0
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "no-underscore-dangle": [
      2,
      {
        "allow": [
          "_id",
          "__",
          "_initialized",
          "_config",
          "_debug"
        ]
      }
    ],
    "no-negated-condition": [
      "error"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "always"
      }
    ]
  }
}
